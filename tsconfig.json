{
  "compilerOptions": {
    "outDir": "lib",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "lib": [
      "dom",
      "es6"
    ],
    "moduleResolution": "node",
    "pretty": true,
    "removeComments": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "./types/*.d.ts",
    "./src/**/*"
  ]
}